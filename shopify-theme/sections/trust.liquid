{% schema %}
{
  "name": "Trust",
  "settings": [
    {
      "type": "text",
      "id": "tag_text",
      "label": "Section Tag",
      "default": "Clean & Safe"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "High in Awesomeness,<br>Not in Sugar"
    }
  ],
  "blocks": [
    {
      "type": "trust_point",
      "name": "Trust Point",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Naturally sweetened with chicory root prebiotic fibre"
        }
      ]
    },
    {
      "type": "quote",
      "name": "Doctor Quote",
      "limit": 1,
      "settings": [
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote Text",
          "default": "As a mom and doctor, keeping kids' bodies nourished and their gut healthy is non-negotiable. That's why these gummies #KickSugar and keep only the good stuff."
