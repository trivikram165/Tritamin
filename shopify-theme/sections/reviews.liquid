<!-- Reviews Section -->
<section class="reviews" id="reviews">
  <div class="container">
    <div class="section-header fade-in">
      <span class="section-tag">{{ section.settings.tag_text }}</span>
      <h2 class="section-title">{{ section.settings.title }}</h2>
    </div>
    <div class="reviews-summary fade-in">
      <div class="reviews-rating">
        <span class="rating-number">{{ section.settings.rating }}</span>
        <span class="rating-star">★</span>
      </div>
      <div class="reviews-stats">
        <span class="reviews-count">{{ section.settings.review_count }} Reviews</span>
        <span class="reviews-sold">{{ section.settings.units_sold }}+ units sold</span>
      </div>
    </div>
    <div class="reviews-carousel fade-in">
      <div class="reviews-track" id="reviews-track">
        {% for block in section.blocks %}
          <div class="review-card" {{ block.shopify_attributes }}>
            <div class="review-header">
              {% if block.settings.avatar %}
                <img src="{{ block.settings.avatar | image_url: width: 60 }}" alt="{{ block.settings.name }}" class="reviewer-img">
              {% else %}
                <div class="reviewer-avatar">{{ block.settings.name | slice: 0 }}</div>
              {% endif %}
              <div class="reviewer-info">
                <span class="reviewer-name">{{ block.settings.name }}</span>
                <span class="review-date">{{ block.settings.date }}</span>
              </div>
              <div class="review-stars">{{ block.settings.stars }}</div>
            </div>
            <h4 class="review-title">{{ block.settings.title }}</h4>
            <p class="review-text">{{ block.settings.text }}</p>
          </div>
        {% endfor %}
      </div>
      <div class="carousel-nav">
        <button class="carousel-btn carousel-prev" id="carousel-prev">←</button>
        <button class="carousel-btn carousel-next" id="carousel-next">→</button>
      </div>
    </div>
    <a href="#" class="reviews-link fade-in">Read all reviews →</a>
  </div>
</section>

