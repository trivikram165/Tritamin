<!-- Key Benefits Section -->
<section class="benefits" id="benefits">
  <div class="container">
    <div class="section-header fade-in">
      <span class="section-tag">{{ section.settings.tag_text }}</span>
      <h2 class="section-title">{{ section.settings.title }}</h2>
    </div>
    <div class="benefits-grid">
      {% for block in section.blocks %}
        <div class="benefit-card tilt-card fade-in" {{ block.shopify_attributes }}>
          <div class="benefit-icon">{{ block.settings.icon }}</div>
          <h3 class="benefit-title">{{ block.settings.title }}</h3>
          <p class="benefit-desc">{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

