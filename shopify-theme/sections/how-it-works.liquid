<!-- How It Works Section -->
<section class="how-it-works" id="how-it-works">
  <div class="container">
    <div class="section-header fade-in">
      <span class="section-tag">{{ section.settings.tag_text }}</span>
      <h2 class="section-title">{{ section.settings.title }}</h2>
    </div>
    <div class="steps-container">
      {% for block in section.blocks %}
        {% unless forloop.first %}
          <div class="step-connector"></div>
        {% endunless %}
        <div class="step fade-in" {{ block.shopify_attributes }}>
          <div class="step-number">{{ forloop.index }}</div>
          <div class="step-icon">{{ block.settings.icon }}</div>
          <h3 class="step-title">{{ block.settings.title }}</h3>
          <p class="step-desc">{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
    <div class="steps-note fade-in">
      <span class="note-icon">ðŸ’¡</span>
      <span>{{ section.settings.note_text }}</span>
    </div>

    <!-- Dosage Calculator -->
    <div class="dosage-calculator fade-in">
      <h3>Dosage Calculator</h3>
      <div class="calc-inner">
        <label>Child's Age:</label>
        <input type="range" min="2" max="18" value="4" class="age-slider" id="age-slider">
        <div class="calc-output">
          <span id="age-display">4 years</span>
          <span class="arrow">â†’</span>
          <span class="dosage-result" id="dosage-result">1 Gummy / Day</span>
        </div>
      </div>
    </div>
  </div>
</section>

