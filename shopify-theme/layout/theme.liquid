<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="#E63B5A">
  <link rel="canonical" href="{{ canonical_url }}">

  {%- if settings.favicon != blank -%}
    <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
  {%- endif -%}

  <title>
    {{ page_title }}
    {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
    {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
    {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
  </title>

  {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}">
  {% endif %}

  <!-- Preconnect to Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

  <!-- Theme CSS -->
  {{ 'tritamin.css' | asset_url | stylesheet_tag }}

  <!-- Shopify Required Tags -->
  {{ content_for_header }}

  <style>
    :root {
      --color-strawberry: {{ settings.color_strawberry }};
      --color-green: {{ settings.color_green }};
      --color-orange: {{ settings.color_orange }};
      --color-purple: {{ settings.color_purple }};
    }
  </style>
</head>

<body class="template-{{ template.name }}">
  <!-- Page Loader -->
  <div class="page-loader" id="page-loader">
    <div class="loader-content">
      <div class="loader-gummy">üçì</div>
      <div class="loader-text">Loading yummy goodness...</div>
    </div>
  </div>

  <!-- Scroll Progress Bar -->
  <div class="scroll-progress" id="scroll-progress"></div>

  <!-- Animated Gradient Background -->
  <div class="animated-gradient-bg"></div>

  <!-- Floating Particles Container -->
  <div class="particles-container" id="particles-container"></div>

  <!-- Confetti Container -->
  <div class="confetti-container" id="confetti-container"></div>

  <!-- Search Overlay -->
  <div class="search-overlay" id="search-overlay">
    <div class="search-container">
      <button class="close-search" id="close-search">√ó</button>
      <input type="text" class="search-input" placeholder="Search for ingredients, benefits...">
      <p class="search-hint">Try "Vitamin C", "Immunity", "Sugar"</p>
    </div>
  </div>

  <!-- Lab Report Modal -->
  <div class="modal-backdrop" id="lab-modal">
    <div class="modal-content">
      <button class="modal-close" id="close-lab-modal">√ó</button>
      <div class="modal-header">
        <h3>Certificate of Analysis</h3>
        <span class="verified-badge">‚úì Verified Safe</span>
      </div>
      <div class="modal-body">
        <img src="{{ 'lab_report.png' | asset_url }}" alt="Lab Test Report" class="lab-report-img">
        <div class="lab-details">
          <p><strong>Tested for:</strong> Heavy Metals, Microbials, Pesticides</p>
          <p><strong>Result:</strong> PASSED (All parameters within safe limits)</p>
          <p><strong>Lab:</strong> Eurofins Certified Lab</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <a class="skip-to-content-link button visually-hidden" href="#MainContent">
    {{ "accessibility.skip_to_text" | t }}
  </a>

  {% sections 'header-group' %}

  <main id="MainContent" role="main" tabindex="-1">
    {{ content_for_layout }}
  </main>

  {% sections 'footer-group' %}

  <!-- Mobile Sticky Bar -->
  <div class="mobile-sticky-bar" id="mobile-sticky-bar">
    <div class="mobile-sticky-price">
      <span class="mobile-price">‚Çπ399</span>
      <span class="mobile-price-sub">30 Days Pack</span>
    </div>
    <a href="#buy" class="btn btn-primary mobile-sticky-btn">Buy Now</a>
  </div>

  <!-- Theme JavaScript -->
  <script src="{{ 'tritamin.js' | asset_url }}" defer></script>
</body>
</html>
